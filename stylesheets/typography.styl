font-xlarge = 4.5rem
font-large = 3rem
font-medium = 2rem
font-small = 1.5rem
font-tiny = 1rem

yodel-header-font-family = 'Josefin Sans', 'Lucida Grande', 'Lucida Sans', sans-serif

body
  font-size 12px

.h1
  font-family yodel-header-font-family
  font-size font-xlarge

.h2
  font-family yodel-header-font-family
  font-size font-large

.h3
  font-family yodel-font-family
  font-size font-medium
  font-weight 700

.h4
  font-family yodel-header-font-family
  font-size font-small

p.tiny
  font-size font-tiny
  font-family yodel-font-family

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

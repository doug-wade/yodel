@import colors

.content
  padding-top 12px
  padding-right 48px
  padding-left 48px
  font-size 18px

ion-list
  &.tags
    display inline
    margin 0
    padding 0
    ion-item
      display inline
      list-style none
      margin 0
      padding 0
      &:after
        content ", "
        color #aaa
      &:last-child
        &:after
          content ""

.project
  padding 16px

.slider
  height 100%

.slider-slide
  padding-top 120px
  color #000
  background-color #fff
  text-align center
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight 300

.error-container
  margin 5px 0
  &:last-child
    margin 5px 0 0

.error
  padding 10px 16px
  font-family "Arial Black", Gadget, sans-serif
  font-size 11px
  text-transform uppercase
  color #555
  vertical-align middle
  i
    font-size 24px
    color #B83E2C
    vertical-align middle

.last-error-container
  & > .error
    padding 10px 16px 0

.has-errors
  border-bottom 3px solid #B83E2C

.no-errors
  border-bottom 3px solid green

h1
  color #fff
  font-size 42px

.title-bordered
  border-top solid 2px #bbb
  padding-top 30px

p
  color #555

a
  text-decoration none
  color #41b7d8

.scroll
  height 100%

.menu
  .bar
    &.bar-header
      &.expanded
        transition all .5s ease-in-out
  h2
    bottom 0
    font-size 18px
    left 16px
    position absolute
  .avatar
    height 88px
    width 88px
  &.menu-left
    *
      font-weight bold

.menu-open
  .bar
    &.bar-header
      &.expanded
        background-color #222
  .ion-navicon
    transform rotate(-360deg)
    -webkit-transition all 0.2s ease-in-out
    transition all 0.2s ease-in-out
    &:before
      content "\f2ca"

.app-icon
  background-color #fff
  background url('../images/logo.png') center
  background-size cover
  border-radius 30%
  height 125px
  margin 0 auto
  width 150px

label
  &.login
    background 0 0
    box-shadow none
    display block
    padding 30px 16px 0 16px

.login
  input
    background-color rgba(0,0,0,0.6)
    color #fff
    letter-spacing 0.25rem
    padding 20px 10px
  span
    color #444
    font-weight 700
    letter-spacing 0.25rem
    position absolute
    padding 5px 0 0
    text-transform uppercase
    transform translate3d(0,-30px,0) scale(1)
    transform-origin 0
    transition all .2s ease
    -webkit-transform translate3d(0,-30px,0) scale(1)
    -webkit-transition all .2s ease
    z-index 2

.splash
  background-color #886aea

.button
  &.button-energized
    background-color #fad13b
    color #362a5e
    font-weight 700
  &.nav-bar-button
    border-radius 0
    box-shadow none
    padding 0 1rem

#add-portfolio
  font-size 40px
  height 100%
  left -35px
  max-height 40px
  max-width 40px
  top 16px
  width 100%

input.create-portfolio, input.add-portfolio-item
  padding-left 5px
  width 100%

.import-file
  .placeholder
    color #aaaaaa

.avatar, hero
  background #fff
  background-size cover

.photo-container
  height 425px
  margin 10px
  .photo
    height 320px
  .photo-header
    height 50px
    padding 10px
  .photo-footer
    height 50px
    margin-top 5px

img
  &.photo-image
    margin auto
    max-width 400px
    width 400px

.photo-footer
  .tab-item
    max-width 200px

.about
  p
    font-size 2rem
    line-height 2rem
    padding-left 4rem
    padding-right 4rem
  h2
    font-size 4rem
    padding-left 4rem
    padding-top 2.5rem
    padding-bottom .5rem
    font-weight bold
  .footer
    position absolute
    bottom 0

button.slick-next, button.slick-prev
  color #ED693C
  background #ED693C
  position relative

button.slick-prev:hover,
button.slick-prev:focus,
button.slick-next:hover,
button.slick-next:focus
  color #ED693C
  outline none
  background #ED693C

.pane
  background-color yodel-light-grey

.yodel-bar
  background-color yodel-light-grey

div.buttons
  background-color yodel-dark-grey

button.nav-bar-button
  color yodel-white

@import colors
@import common
@import typography

.about
  padding-left 4rem
  font-family yodel-font-family

  p
    font-size font-medium
    line-height 2.5rem
    padding-right 4rem

  h2.header
    text-align center
    padding-top 2.5rem
    padding-bottom .5rem

  h3.subheader
    text-align center

  .what-subheader
    text-align center

  .reason-image
    max-width 100%
    height auto

  .image-container-architecture
    height: 100%;
    width: 100%;
    margin: 0 auto;
    padding: 0;

    background-image: url(../img/exampleImage.jpg);
    background-position: top center;
    background-repeat: no-repeat;
    background-size: 100%;

.team-photo
  position relative

  .name-overlay
    font-weight 700
    font-size font-medium
    color white
    text-align center
    position absolute
    bottom 10%
    width 100%

  .title
    font-size font-small

.fluid-image-container
  position relative

  .h1
    color yodel-white
    position absolute
    top 35%
    text-align center
    width 100%

  .h2
    color yodel-white
    position absolute
    top 55%
    text-align center
    width 100%

.hero-image
  background transparent url("/images/about-hero.jpg")
  text-align center

  img
    margin-top 15%

  .h1
    color white

.contact-us
  input.name
    width 75%
    display inline
    margin-left 1rem

  input.email
    width 75%
    display inline
    margin-left 1rem

  .type
    padding-left 1rem

  .message
    width 85%
    height 400px

  label
    font-size font-medium
    padding-bottom 2rem
    display block

    label
      display inline

  label.type-name
    font-size font-small

  .submit
    flat-button()
    width 15rem
    position relative
    background yodel-pink
